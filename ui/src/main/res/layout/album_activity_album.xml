<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/albumToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/album_toolbar_height" />

    <FrameLayout
        android:id="@+id/albumFrame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:id="@+id/albumBottomView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/album_bottom_height"
        android:background="@color/colorAlbumBottomViewBackground">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/albumFinderAll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/album_button_margin"
            android:background="?android:selectableItemBackground"
            android:drawableRight="@drawable/ic_album_ui_finder"
            android:gravity="right|center_vertical"
            android:padding="@dimen/album_bottom_padding"
            android:text="@string/album_all"
            android:textColor="@color/colorAlbumBottomFinderTextColor"
            android:textSize="@dimen/album_bottom_text_size"
            tools:ignore="RtlHardcoded" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/albumPre"
            android:layout_width="@dimen/album_bottom_button_width"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/album_button_margin"
            android:layout_marginRight="@dimen/album_bottom_marginRight"
            android:layout_toLeftOf="@+id/albumSelect"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:padding="@dimen/album_bottom_padding"
            android:text="@string/album_preview"
            android:textColor="@color/colorAlbumBottomPreViewTextColor"
            android:textSize="@dimen/album_bottom_text_size"
            tools:ignore="RelativeOverlap,RtlHardcoded" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/albumSelect"
            android:layout_width="@dimen/album_bottom_button_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:layout_margin="@dimen/album_button_margin"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:padding="@dimen/album_bottom_padding"
            android:text="@string/album_select"
            android:textColor="@color/colorAlbumBottomSelectTextColor"
            android:textSize="@dimen/album_bottom_text_size"
            tools:ignore="RtlHardcoded" />


    </RelativeLayout>


</LinearLayout>