<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/album_content_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.album.widget.LoadMoreRecyclerView
        android:id="@+id/album_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingTop="@dimen/album_padding_top" />

    <ProgressBar
        android:id="@+id/album_progress"
        android:layout_width="@dimen/album_progress_width"
        android:layout_height="@dimen/album_progress_height"
        android:layout_gravity="center"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/album_empty"
        android:layout_width="@dimen/album_empty_width"
        android:layout_height="@dimen/album_empty_height"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:visibility="gone" />

</FrameLayout>
