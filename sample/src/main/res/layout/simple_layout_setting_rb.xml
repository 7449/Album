<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settingRg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:checkedButton="@id/multi_select">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/simple_select_setting"
        android:textColor="@color/colorBlack" />

    <RadioButton
        android:id="@+id/crop_cropper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/simple_default_selector_rb_check"
        android:text="@string/simple_crop_cropper" />

    <RadioButton
        android:id="@+id/multi_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/simple_default_selector_rb_check"
        android:text="@string/simple_multi_select" />

    <RadioButton
        android:id="@+id/single_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/simple_default_selector_rb_check"
        android:text="@string/simple_single_select" />

</RadioGroup>